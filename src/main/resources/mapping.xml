<?xml version="1.0" encoding="utf-8"?>
<mapping xmlns="http://www.magenta.dk/eark/erms/mapping/1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ead="http://ead3.archivists.org/schema/"
	xsi:schemaLocation="http://www.magenta.dk/eark/erms/mapping/1.0 mapping.xsd">

	<!-- Corresponding to the CMIS property ID "cmis:objectTypeId" -->
	<objectTypes>
		<objectType id="series">delta:series</objectType>
		<objectType id="subseries">delta:subseries</objectType>
		<objectType id="record">delta:record</objectType>
	</objectTypes>

	<eadTemplates>
		<template id="series">
			<hooks>
				<hook xpath="//child::ead:did/child::ead:unitdate">cmis:creationDate</hook>
				<hook xpath="//child::ead:did/child::ead:unittitle">cmis:name</hook>
				<hook xpath="//child::ead:did/child::ead:unitid">cmis:objectId</hook>
			</hooks>
			<ead>
				<c level="series">
					<ead:did>
						<ead:unitdate datechar="created"/>
						<ead:unittitle/>
						<ead:unitid localtype="system_id"/>
					</ead:did>
				</c>
			</ead>
			<leaf>false</leaf>
		</template>
		<template id="subseries">
			<hooks>
				<hook xpath="//child::ead:did/child::ead:unitdate">cmis:creationDate</hook>
				<hook xpath="//child::ead:did/child::ead:unittitle">cmis:name</hook>
				<hook xpath="//child::ead:did/child::ead:unitid">cmis:objectId</hook>
			</hooks>
			<ead>
				<c level="subseries">
					<ead:did>
						<ead:unitdate datechar="created"/>
						<ead:unittitle/>
						<ead:unitid localtype="system_id"/>
					</ead:did>
				</c>
			</ead>
			<leaf>false</leaf>
		</template>
		<template id="record">
			<hooks>
				<hook xpath="//child::ead:did/child::ead:unitdate">cmis:creationDate</hook>
				<hook xpath="//child::ead:did/child::ead:unittitle">cmis:name</hook>
				<hook xpath="//child::ead:did/child::ead:unitid">cmis:objectId</hook>
			</hooks>
			<ead>
				<c level="file">
					<ead:did>
						<ead:unitdate datechar="created"/>
						<ead:unittitle/>
						<ead:unitid localtype="system_id"/>
						<ead:daoset label="Digital Object" coverage="whole">
							<ead:dao daotype="unknown" />
							<ead:dao daotype="unknown" />
						</ead:daoset>
					</ead:did>
				</c>
			</ead>
			<leaf>true</leaf>
		</template>
	</eadTemplates>
</mapping>
